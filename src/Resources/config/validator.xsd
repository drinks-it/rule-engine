<?xml version="1.0" encoding="utf-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <service id="DrinksIt\RuleEngineBundle\Validator\ActionCollectionValidator" class="DrinksIt\RuleEngineBundle\Validator\ActionCollectionValidator" autowire="true" autoconfigure="true">
            <tag name="validator.constraint_validator"/>
            <argument type="service" id="DrinksIt\RuleEngineBundle\Metadata\Resource\Factory\RuleEngineFactory"/>
        </service>

        <service id="rule_engine.validator.action_collection" alias="DrinksIt\RuleEngineBundle\Validator\ActionCollectionValidator" />

        <service id="DrinksIt\RuleEngineBundle\Validator\ConditionCollectionValidator" class="DrinksIt\RuleEngineBundle\Validator\ConditionCollectionValidator" autowire="true" autoconfigure="true">
            <tag name="validator.constraint_validator"/>
            <argument type="service" id="DrinksIt\RuleEngineBundle\Metadata\Resource\Factory\RuleEngineFactory"/>
        </service>

        <service id="rule_engine.validator.condition_collection" alias="DrinksIt\RuleEngineBundle\Validator\ConditionCollectionValidator" />

        <service id="DrinksIt\RuleEngineBundle\Validator\TriggerEventValidator" class="DrinksIt\RuleEngineBundle\Validator\TriggerEventValidator" autowire="true" autoconfigure="true">
            <tag name="validator.constraint_validator"/>
            <argument type="service" id="App\ApiPlatform\RuleEngine\RuleEventIdListenerFactory"/>
        </service>

        <service id="rule_engine.validator.event" alias="DrinksIt\RuleEngineBundle\Validator\TriggerEventValidator" />
    </services>
</container>
